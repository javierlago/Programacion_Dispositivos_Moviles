<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".boton5_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Spinner Dinamico"
            android:textAlignment="center"
            android:textSize="30sp" />
        <EditText
            android:id="@+id/texto_anadirListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Introduzca un planeta"
            android:padding="10dp" />

        <Button
            android:id="@+id/botonAceptarListView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aceptar" />


        <!-- Simulando un spiner dinamico-->
        <ListView
            android:id="@+id/ListViewDinamico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
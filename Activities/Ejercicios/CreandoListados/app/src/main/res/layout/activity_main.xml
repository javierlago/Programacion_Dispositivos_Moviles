<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Creandp listados"
        android:textAlignment="center" />
<!-- Gestion de los spiners -->
    <Button
        android:id="@+id/button1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="Sin Adaptador" />

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="Adaptador" />

    <Button
        android:id="@+id/button3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="Adaptador con recurso" />

    <Button
        android:id="@+id/button4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="Adaptador con Dinamico" />

    <Button
        android:id="@+id/button5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="Adaptador con Dinamico" />

    <Button
        android:id="@+id/button6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="Provincia/Ciudad" />
<View
    android:layout_width="match_parent"
    android:layout_height="10dp"
    android:background="@color/black"/>

    <!-- Gestion de los List view -->
    <Button
        android:id="@+id/list_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClickBtnListados"
        android:text="List View" />


</LinearLayout>